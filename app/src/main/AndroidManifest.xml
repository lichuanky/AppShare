<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spectertree.appshare"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name="com.spectertree.appshare.SplashActivity"
            android:theme="@style/ThemeActivityNoTitle"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AppShareActivity" />
        <activity
            android:name="com.spectertree.appshare.ApkFileManager"
            android:label="@string/apk_file_manager_title" />
        <activity
            android:name="com.spectertree.appshare.SettingActivity"
            android:label="@string/setting_title" />
        <activity
            android:name="com.spectertree.appshare.AboutActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.spectertree.appshare.DirectorySelectActivity"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>